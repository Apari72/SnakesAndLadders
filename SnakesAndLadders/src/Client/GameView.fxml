<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:controller="Client.GameController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600.0" prefHeight="600.0">

    <!-- Top – Title -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Snakes and Ladders"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Center – Game Board Panel -->
    <center>
        <Pane fx:id="boardPane"
              prefWidth="500.0" prefHeight="500.0"
              style="-fx-background-color: lightblue; -fx-border-color: black;"/>
    </center>

    <!-- Bottom – Controls -->
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Roll Dice"
                    fx:id="rollButton"
                    onAction="#handleRollDice"/>
            <Label fx:id="statusLabel"
                   text="Waiting for server..."/>
        </HBox>
    </bottom>

</BorderPane>
